# Four-Engine System Architecture Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Settings
ENVIRONMENT=development
APP_NAME="Four-Engine System Architecture"
APP_VERSION="1.0.0"

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=four_engine_db
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_ECHO=false

# Clerk Authentication
CLERK_SECRET_KEY=your_clerk_secret_key_here
CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here

# LLM Configuration
LLM_OPENROUTER_API_KEY=your_openrouter_api_key_here
LLM_DEFAULT_MODEL=anthropic/claude-3-haiku
LLM_EMBEDDING_MODEL=text-embedding-ada-002
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.1

# Engine Performance Settings
ENGINE_CALC_TIMEOUT_SECONDS=30
ENGINE_STRATEGY_TIMEOUT_SECONDS=300
ENGINE_ADVICE_TIMEOUT_SECONDS=60
ENGINE_LLM_TIMEOUT_SECONDS=120

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true
API_RELOAD=true
API_CORS_ORIGINS=["http://localhost:3000", "https://localhost:3000"]

# Security Settings
SEC_JWT_SECRET_KEY=change-this-in-production-very-long-random-string
SEC_JWT_ALGORITHM=HS256
SEC_JWT_EXPIRATION_HOURS=24

# Feature Flags
ENABLE_CACHING=true
ENABLE_METRICS=true
ENABLE_TRACING=true
